rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users: each user can read/write their own data
    match /users/{userId} {
      // Profile: readable by owner, writable but protected fields cannot be changed by client
      // Protected fields: plan (billing), createdAt (immutable), tokenUsage (managed by Cloud Functions)
      allow read: if isOwner(userId);
      allow create: if isOwner(userId)
                    && request.resource.data.plan == "free";
      allow update: if isOwner(userId)
                    && request.resource.data.plan == resource.data.plan
                    && request.resource.data.createdAt == resource.data.createdAt
                    && (!("tokenUsage" in request.resource.data) ||
                        request.resource.data.tokenUsage == resource.data.tokenUsage);

      // Writings: create-only (immutable after submission)
      // Prevents feedback/rank manipulation
      match /writings/{docId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId);
        // No update or delete allowed
      }

      // Vocabulary
      match /vocabulary/{docId} {
        allow read, write: if isOwner(userId);
      }

      // Meta (stats etc)
      match /meta/{docId} {
        allow read, write: if isOwner(userId);
      }

      // Mistakes (間違いノート): create + delete only
      // Delete allowed for "克服した" feature
      match /mistakes/{docId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId);
        allow delete: if isOwner(userId);
        // No update allowed (delete instead of archive)
      }
    }

    // Daily prompts: shared, cached, read-only for clients
    match /dailyPrompts/{date} {
      allow read: if request.auth != null;
    }

    // Feedback: server-side only (via Cloud Functions with rate limiting)
    // No client access - Admin SDK only

    // Global usage: no client access (admin SDK only)
    // No rules = no client access
  }
}
